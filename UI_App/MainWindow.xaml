<Window x:Class="UI_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Label>Country:</Label>
            <TextBox x:Name="countryNameTB" MinWidth="150"></TextBox>
            <Button Click="Button_Click">Add</Button>
            <ComboBox Name="countyList" MinWidth="150"></ComboBox>
            <Button Click="Button_Click_1">Refresh</Button>
        </ToolBar>
    <DataGrid x:Name="dataGrid">
    </DataGrid>
    </DockPanel>
</Window>
